tags: $:/tags/ViewTemplate
list-after: $:/core/ui/ViewTemplate/body
code-body: yes

<$list
    filter="[<currentTiddler>has[book]]"
>
    <$transclude
        tiddler={{{ [{!!book}addsuffix[/cover]] }}}
    />

    <div class="tc-table-of-contents">
        <$macrocall
            $name="toc-selective-expandable"
            tag={{!!title}}
            sort="sortan[]"
        />
    </div>
</$list>